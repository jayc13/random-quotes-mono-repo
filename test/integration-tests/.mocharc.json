{
  "require": [
    "tsconfig-paths/register",
    "ts-node/register",
    "jsdom-global/register",
    "source-map-support/register"
  ],
  "recursive": true,
  "extension": ["ts"],
  "spec": "test/**/*.test.ts",
  "timeout": 10000,
  "exit": true,
  "reporter": "spec",
  "watch-files": [
    "test/**/*.ts",
    "src/**/*.ts"
  ],
  "watch-ignore": ["node_modules"]
}